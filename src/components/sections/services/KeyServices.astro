---
import Container from "../../shared/Container.astro";
import Title2 from "../../shared/Title2.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import GradiantText from "../../shared/GradiantText.astro";
import Paragraph from "../../shared/Paragraph.astro";
import LazyImage from "../../shared/LazyImage.astro";
import { servicesSectionData } from "./data.ts";

const primaryServiceImage = "/images/TCB15_2.webp";
const secondaryServiceImage = "/images/PLAQUETTE TC25.webp";
const tertiaryServiceImage = "/images/TCH25 PARTES.webp";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="servicios" class={`bg-box-bg/40 pt-4 md:pt-5 pb-12 md:pb-16 ${className}`}>
  <Container size="wide">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,3fr)_minmax(0,2fr)] items-start">
      <div class="space-y-8">
        <div class="space-y-3">
          <Title2>{servicesSectionData.title}</Title2>
          <SubTitle2 as="h2">
            {servicesSectionData.subheading.text1_1}
            <GradiantText> {servicesSectionData.subheading.text1_2}</GradiantText>
          </SubTitle2>
          <Paragraph className="max-w-3xl text-heading-3">
            {servicesSectionData.subheading.text2}
          </Paragraph>
        </div>

        <ul class="space-y-8">
          {
            servicesSectionData.services.map((service) => (
              <li class="flex flex-col items-center gap-5 border-b border-box-border/60 pb-8 last:border-none last:pb-0 sm:flex-row sm:items-start">
                <div
                  class="flex h-24 w-24 flex-shrink-0 items-center justify-center overflow-hidden rounded-full border border-primary/40 bg-white shadow-md dark:bg-base-dark-900"
                >
                  <LazyImage
                    src={service.visual}
                    alt={service.title}
                    class="h-full w-full object-cover"
                    height="192"
                    width="192"
                  />
                </div>
                <div class="flex-1 space-y-2 text-center sm:text-left">
                  <h3 class="text-lg font-semibold uppercase tracking-wide text-primary">
                    {service.title}
                  </h3>
                  <Paragraph className="text-heading-3 leading-relaxed">
                    {service.briefDescription}
                  </Paragraph>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="relative grid h-full w-full grid-rows-3 gap-6 overflow-hidden rounded-[4rem] bg-gradient-to-b from-white to-primary-100 p-6 shadow-2xl">
        <div class="relative overflow-hidden rounded-3xl bg-white/60 p-4 shadow-lg">
          <LazyImage
            src={primaryServiceImage}
            alt="Equipo Continental Andes TCB15"
            class="h-full w-full object-cover object-center"
            width="800"
            height="600"
            loading="lazy"
          />
        </div>
        <div class="relative overflow-hidden rounded-3xl bg-white/60 p-4 shadow-lg">
          <LazyImage
            src={secondaryServiceImage}
            alt="Plaqueta TC25"
            class="h-full w-full object-cover object-center"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
        <div class="relative overflow-hidden rounded-3xl bg-white/60 p-4 shadow-lg">
          <LazyImage
            src={tertiaryServiceImage}
            alt="Partes TCH25"
            class="h-full w-full object-cover object-center"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </Container>
</section>
