---
import Container from "../../shared/Container.astro";
import Title2 from "../../shared/Title2.astro";
import ServiceCard from "../services/components/ServiceCard.astro";
import ServiceCopyTextCard from "../services/components/ServiceCopyTextCard.astro";
import { areasSectionData } from "./data.ts";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="industrias" class=`${className}`>
  <Container size="wide">
    <Title2>{areasSectionData.title}</Title2>
  </Container>
  <Container size="wide">
    <div class="grid grid-col-1 md:grid-cols-3 lg:grid-cols-4 gap-y-2 gap-x-4">
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[0].title}
          description={areasSectionData.areas[0].briefDescription}
          visual={areasSectionData.areas[0].visual}
        />
      </div>
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[1].title}
          description={areasSectionData.areas[1].briefDescription}
          visual={areasSectionData.areas[1].visual}
        />
      </div>
      <ServiceCopyTextCard
        className="md:col-span-2 lg:col-span-2 flex flex-col"
        subheading={areasSectionData.subheading}
      />
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[2].title}
          description={areasSectionData.areas[2].briefDescription}
          visual={areasSectionData.areas[2].visual}
        />
      </div>
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[3].title}
          description={areasSectionData.areas[3].briefDescription}
          visual={areasSectionData.areas[3].visual}
        />
      </div>
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[4].title}
          description={areasSectionData.areas[4].briefDescription}
          visual={areasSectionData.areas[4].visual}
        />
      </div>
      <div class="">
        <ServiceCard
          title={areasSectionData.areas[5].title}
          description={areasSectionData.areas[5].briefDescription}
          visual={areasSectionData.areas[5].visual}
        />
      </div>
    </div>
  </Container>
</section>
