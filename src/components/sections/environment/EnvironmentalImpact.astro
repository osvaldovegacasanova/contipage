---
import Container from "../../shared/Container.astro";
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
import LazyImage from "../../shared/LazyImage.astro";
import Paragraph from "../../shared/Paragraph.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import Title2 from "../../shared/Title2.astro";
import { environmentalImpactSection } from "./data.ts";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="temporal" class=`${className}`>
  <Container>
    <Title2>{environmentalImpactSection.title}</Title2>
  </Container>
  <Container className="flex flex-col midmd:flex-row gap-10 lg:gap-12 ">
    <!-- <div
      class="max-w-md mx-auto flex midmd:w-7/12 lg:w-3/4 flex-col align-self-start text-start"
    > -->
    <div
      class="max-w-md mr-auto w-11/12 flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col"
    >
      <SubTitle2>
        {environmentalImpactSection.subheading1_1}
        <GradiantText>{environmentalImpactSection.subheading1_2}</GradiantText>
      </SubTitle2>
      <Paragraph className="whitespace-pre-line">
        {environmentalImpactSection.description}
      </Paragraph>
      <div class="mt-8 overflow-hidden rounded-3xl border border-primary/20 bg-transparent shadow-[0_15px_45px_rgba(15,23,42,0.08)]">
        <table class="w-full border-collapse text-left text-heading-3">
          <tbody>
            {
              environmentalImpactSection.impactPoints.map((point) => (
                <tr class="border-b border-primary/10 last:border-none">
                  <td class="w-1/4 p-4 align-top">
                    <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-2xl bg-primary/10 text-primary">
                      {point.icon === "coverage" && (
                        <svg
                          class="h-8 w-8"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="1.6"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          aria-hidden="true"
                        >
                          <path d="M12 21c-3.8-4.25-6-7.75-6-10.5A6 6 0 0 1 12 4.5a6 6 0 0 1 6 6c0 2.75-2.2 6.25-6 10.5Z" />
                          <circle cx="12" cy="11" r="2.2" />
                        </svg>
                      )}
                      {point.icon === "experience" && (
                        <svg
                          class="h-9 w-9"
                          viewBox="0 0 48 48"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="1.8"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          aria-hidden="true"
                        >
                          <path d="M6 42V20a2 2 0 0 1 2-2h10v24" />
                          <path d="M18 42V10h12v32" />
                          <path d="M30 42V22h10a2 2 0 0 1 2 2v18" />
                          <path d="M4 42h40" />
                          <path d="M11 24h2M11 29h2M11 34h2" />
                          <path d="M23 15h2M23 20h2M23 25h2M23 30h2M23 35h2" />
                          <path d="M35 26h2M35 31h2M35 36h2" />
                        </svg>
                      )}
                      {point.icon === "processes" && (
                        <svg
                          class="h-8 w-8"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="1.6"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          aria-hidden="true"
                        >
                          <circle cx="7.5" cy="7.5" r="2.5" />
                          <circle cx="16.5" cy="7.5" r="2.5" />
                          <circle cx="12" cy="16.5" r="2.5" />
                          <path d="M9.5 9.5 11 14" />
                          <path d="M14.5 9.5 13 14" />
                          <path d="M10 16.5h4" />
                        </svg>
                      )}
                      {point.icon === "objectives" && (
                        <svg
                          class="h-8 w-8"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="1.6"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          aria-hidden="true"
                        >
                          <circle cx="12" cy="12" r="7.5" />
                          <circle cx="12" cy="12" r="4" />
                          <circle cx="12" cy="12" r="1.5" fill="currentColor" />
                          <path d="M16.5 7.5 20.5 4" />
                          <path d="m20.5 4 0.5 4" />
                          <path d="M20.5 4h-4" />
                        </svg>
                      )}
                    </div>
                  </td>
                  <td class="p-4">
                    <Paragraph className="font-normal leading-relaxed">
                      {point.text}
                    </Paragraph>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
      <div class="pt-10">
        <CtaButton>{environmentalImpactSection.button}</CtaButton>
      </div>
    </div>
    <div
      class="midmd:max-w-none flex w-11/12 midmd:w-5/12 lg:w-1/2 midmd:h-auto"
    >
      <!-- <div
      class="max-w-md mx-auto midmd:max-w-none lg:mx-0 lg:pr-10 xl:pr-2 flex w-11/12 midmd:w-5/12 lg:w-1/4 midmd:h-[587px]"
    > -->
      <!-- <LazyImage
        src={environmentalImpactSection.visual}
        alt="environmental impact"
        height="587"
        width="388"
        class="w-full h-full object-cover rounded-2xl"
      /> -->
      <LazyImage
        src={environmentalImpactSection.visual}
        alt="impacto ambiental"
        width="700"
        class="w-full h-full object-cover rounded-2xl"
      />
    </div>
  </Container>
</section>
