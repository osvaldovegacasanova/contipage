---
import { Image, Picture } from "astro:assets";
import heroImg from "./assets/hero3.jpg";
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
import SubTitle from "../../shared/SubTitle.astro";
import Title from "../../shared/Title.astro";
import LazyImage from "../../shared/LazyImage.astro";

const heroSection = {
  headline1: "Soluciones de",
  headline2: "aire industrial",
  headline3: "",
  headline4: "que impulsan tus procesos.",
  subheading1: "Desde la instalación hasta el mantenimiento,",
  subheading2:
    "Aseguramos que sus sistemas operen con eficiencia, seguridad y sin detenciones.",
  subheading3: "",
  buttonText: "Solicitar asesoría",
  backgroundImage: "hero-background-image.jpg",
};

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section class={`relative ${className} w-full`} id="hero">
  <div class="w-full pt-24 md:pt-28 bg-base-100 dark:bg-base-dark-900">
    <div class="w-full grid grid-cols-1 md:grid-cols-2 items-center gap-6 md:gap-10">
      <div
        class="order-1 flex flex-col items-center md:items-start text-center md:text-left px-6 md:px-10"
      >
        <Title className="">
          {heroSection.headline1}
          <GradiantText>
            {" " + heroSection.headline2}
            <br />
            {" " + heroSection.headline3}
          </GradiantText>
          {heroSection.headline4}
        </Title>
        <SubTitle className="mt-6 md:mt-8 leading-relaxed italic max-w-xl">
          {heroSection.subheading1}
          <br />
          {heroSection.subheading2}
          <br />
          {heroSection.subheading3}
        </SubTitle>
        <div class="pt-6 md:pt-8">
          <CtaButton>{heroSection.buttonText}</CtaButton>
        </div>
      </div>
      <div class="order-2 relative px-0 md:p-0">
        <div class="w-full aspect-[16/10] sm:aspect-[4/3] md:aspect-auto md:h-full rounded-2xl overflow-hidden">
          <LazyImage
            src={heroImg}
            alt="Una imagen de un aerogenerador."
            className="w-full h-full object-cover"
          />
        </div>
        <svg
          class="fill-base-100 dark:fill-base-dark-900 z-10 absolute top-0 start-0 h-full hidden md:block"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 500 400"
        >
          <path d="M0 0l0 400L100 0Z"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

