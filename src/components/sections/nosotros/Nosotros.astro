---
import Container from "../../shared/Container.astro";
import GradiantText from "../../shared/GradiantText.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import Title2 from "../../shared/Title2.astro";
import PersonaCard from "./components/PersonaCard.astro";
import { nosotrosSection } from "./data.ts";

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section id="nosotros" class={className}>
  <Container className="mx-auto flex flex-col items-center justify-center text-center">
    <Title2>{nosotrosSection.title}</Title2>
    <SubTitle2 as="h2">
      {nosotrosSection.subheading1_1}
      <GradiantText> {nosotrosSection.subheading1_2}</GradiantText>
    </SubTitle2>
  </Container>
  <Container>
    <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8">
      {nosotrosSection.members.map((member) => (
        <PersonaCard
          name={member.name}
          role={member.role}
          email={member.email}
          phone={member.phone}
          photo={member.photo}
        />
      ))}
    </div>
  </Container>
</section>
