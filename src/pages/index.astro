---
import EnvironmentalImpact from "../components/sections/environment/EnvironmentalImpact.astro";
import Productos from "../components/sections/productos/Productos.astro";
import GetInvolved from "../components/sections/cta/GetInvolved.astro";
import Hero from "../components/sections/hero/Hero.astro";
import KeyServices from "../components/sections/services/KeyServices.astro";
import KeyAreas from "../components/sections/areas/KeyAreas.astro";
import Proceso from "../components/sections/proceso/Proceso.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sopladores Centrífugos | Continental Andes Blowers">
  <main class="flex flex-col gap-y-20 md:gap-y-40 overflow-hidden">
    <!-- Hero Section: -->
    <!-- High-quality image or animation of renewable energy sources. -->
    <!-- Headline and subheading centered on the page. -->
    <Hero />

    <Productos />
    <!-- Productos: -->
    <!-- Destaca soluciones y equipos disponibles, con breve descripción y ubicación. -->
    <!-- Mantén un llamado a profundizar en fichas técnicas o contacto comercial. -->

    <KeyServices />
    <!-- Key Services Overview: -->
    <!-- Provide a brief overview of your main green energy services. -->
    <!-- Use engaging visuals and concise text to highlight the benefits. -->
    <!-- Include a call-to-action button leading to detailed service information. -->

    <KeyAreas />
    <!-- Industries served: -->

    <Proceso />
    <!-- Proceso: -->
    <!-- Describe las etapas clave del proceso y diferencia soluciones mono/multietapa. -->
    <!-- Refuerza la innovación continua y la experiencia en ingeniería. -->

    <EnvironmentalImpact />
    <!-- Environmental Impact: -->
    <!-- Showcase the positive impact users can make by choosing your services. -->
    <!-- Use statistics, infographics, or visuals to illustrate the environmental benefits. -->
    <!-- Emphasize the role your company plays in promoting sustainability. -->

    <GetInvolved />
    <!-- Get Involved Section: -->
    <!-- Invite users to actively participate or learn more about sustainability. -->
    <!-- Provide information on community initiatives, events, or partnerships. -->
    <!-- Include a call-to-action for users to join your community or subscribe to updates. -->
  </main>
</Layout>
