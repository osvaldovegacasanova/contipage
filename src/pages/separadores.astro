---
import Layout from "../layouts/Layout.astro";
import Title2 from "../components/shared/Title2.astro";

type Variant = {
  name: string;
  description: string;
  container: string;
  text: string;
  line: string;
  background: string;
};

const variants: Variant[] = [
  {
    name: "Clásico",
    description: "Uso actual con tonos neutros, ideal para fondos claros.",
    container: "border-base-400 bg-base-50 text-heading-1",
    text: "tracking-wide",
    line: "bg-box-border/80",
    background: "bg-base-50",
  },
  {
    name: "Primario",
    description: "Azul corporativo con alto contraste para secciones clave.",
    container: "border-primary-500 bg-primary-50 text-primary-600",
    text: "tracking-wide",
    line: "bg-primary-500",
    background: "bg-primary-50/60",
  },
  {
    name: "Secundario",
    description: "Verde de soporte, funciona bien con contenidos sobre sostenibilidad.",
    container: "border-secondary-400 bg-secondary-50 text-secondary-700",
    text: "tracking-wide",
    line: "bg-secondary-400",
    background: "bg-secondary-50/60",
  },
  {
    name: "Oscuro",
    description: "Pensado para secciones en modo oscuro o fondos fotográficos.",
    container: "border-accent-light/60 bg-base-dark-900 text-accent-light",
    text: "tracking-[0.35em]",
    line: "bg-accent-light/80",
    background: "bg-base-dark-900",
  },
  {
    name: "Minimal",
    description: "Sin fondo, solo borde sutil y texto desaturado.",
    container: "border-box-border/70 bg-transparent text-heading-3",
    text: "tracking-[0.2em]",
    line: "bg-box-border/70",
    background: "bg-transparent",
  },
];

const labels = ["Servicios", "Industrias", "Productos", "Testimonios", "Contáctenos"];
---

<Layout title="Muestrario de Separadores">
  <main class="px-6 py-12 space-y-12 max-w-5xl mx-auto">
    <header class="space-y-3">
      <h1 class="text-3xl font-bold text-heading-1">Separadores de Sección</h1>
      <p class="text-heading-3">
        Opciones de color para texto, líneas y fondos que podemos usar en las etiquetas que separan secciones.
      </p>
    </header>

    <section class="space-y-8">
      {variants.map((variant) => (
        <article class={`rounded-3xl border border-box-border/60 shadow-sm overflow-hidden ${variant.background}`}>
          <div class="px-8 py-10 space-y-6">
            <div class="flex flex-col gap-3">
              <div class="flex items-center gap-4 text-sm font-semibold uppercase tracking-[0.25em]">
                <span class={`flex-1 h-px ${variant.line}`}></span>
                <span class={`text-heading-2 ${variant.container}`}>{variant.name}</span>
                <span class={`flex-1 h-px ${variant.line}`}></span>
              </div>
              <p class="text-heading-3">{variant.description}</p>
            </div>

            <div class="flex flex-wrap gap-4">
              {labels.map((label) => (
                <Title2
                  containerClass={`${variant.container} flex items-center gap-2 px-4 mb-0`}
                  className={`uppercase text-xs ${variant.text}`}
                >
                  <span>{label}</span>
                </Title2>
              ))}
            </div>

            <details class="text-sm text-heading-3/70">
              <summary class="cursor-pointer font-semibold text-heading-2">Clases utilizadas</summary>
              <div class="mt-3 space-y-1">
                <p><strong>Contenedor:</strong> <code class="font-mono">{variant.container}</code></p>
                <p><strong>Texto:</strong> <code class="font-mono">{variant.text}</code></p>
                <p><strong>Línea decorativa:</strong> <code class="font-mono">{variant.line}</code></p>
                <p><strong>Fondo tarjeta:</strong> <code class="font-mono">{variant.background || "bg-transparent"}</code></p>
              </div>
            </details>
          </div>
        </article>
      ))}
    </section>
  </main>
</Layout>
